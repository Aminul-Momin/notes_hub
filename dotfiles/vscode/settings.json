{
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#2979FF",
        "activityBar.activeBorder": "#2979FF",
        "list.activeSelectionForeground": "#2979FF",
        "list.inactiveSelectionForeground": "#2979FF",
        "list.highlightForeground": "#2979FF",
        "scrollbarSlider.activeBackground": "#2979FF50",
        "editorSuggestWidget.highlightForeground": "#2979FF",
        "textLink.foreground": "#2979FF",
        "progressBar.background": "#2979FF",
        "pickerGroup.foreground": "#2979FF",
        "tab.activeBorder": "#2979FF",
        "notificationLink.foreground": "#2979FF",
        "editorWidget.resizeBorder": "#2979FF",
        "editorWidget.border": "#2979FF",
        "settings.modifiedItemIndicator": "#2979FF",
        "settings.headerForeground": "#2979FF",
        "panelTitle.activeBorder": "#2979FF",
        "breadcrumb.activeSelectionForeground": "#2979FF",
        "menu.selectionForeground": "#2979FF",
        "menubar.selectionForeground": "#2979FF",
        "editor.findMatchBorder": "#2979FF",
        "selection.background": "#2979FF40"
    },
    "workbench.statusBar.visible": true,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.sideBar.location": "right",


    "editor.multiCursorModifier": "ctrlCmd",
    "editor.foldingStrategy": "indentation",
    "editor.minimap.enabled": false,
    "editor.fontSize": 16,
    "editor.formatOnPaste": true,
    "editor.snippetSuggestions": "top",
    "editor.insertSpaces": true, //Insert spaces when pressing Tab. This setting is overridden based on the file contents when #editor.detectIndentation# is on.
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "all",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.suggestSelection": "first",
    "editor.inlineSuggest.enabled": true,
    "debug.console.fontSize": 14,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        // "**/.idea": true,
        "**/.metadata": true,
        "**/.project": true,
        "**/.pydevproject": true,
        "**/.svn": true,
        // "**/.vscode": true,
        "**/*.class": true,
        "**/CVS": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.formatOnType": true
        // "editor.defaultFormatter": "remimarsal.prettier-now"
    },
    "[markdown]": {
        "editor.wordWrap": "off",
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.wordWrapColumn": 80
    },
    "markdown-preview-enhanced.hideDefaultVSCodeMarkdownPreviewButtons": false,
    // "markdown-preview-enhanced.previewTheme": "none.css",
    "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
    // "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.print.theme": "dark",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // "java.configuration.checkProjectSettingsExclusions": false,
    "python.jediEnabled": false,
    "printcode.printFilePath": "none",
    "printcode.tabSize": 4,
    "printcode.fontSize": 10,
    "printcode.paperSize": "letter",
    // "python.pythonPath": "/.venv/bin/python3",
    // "python.pythonPath": "/usr/local/bin/python3",
    "python.linting.flake8Enabled": true,
    // "python.linting.pydocstyleEnabled": true,
    "python.linting.flake8Args": [
        "--ignore=E265, E305, E302, E501, E401, F401, E701, W293, E226, E251, E266, E731, E303, E242, F405, E402, F403"
    ],
    "python.analysis.typeCheckingMode": "off",
    "python.languageServer": "Pylance",
    "extensions.ignoreRecommendations": false,
    "bracket-pair-colorizer-2.activeScopeCSS": ["borderStyle : solid","borderWidth : 3px","borderColor : {color}","opacity: 0.5"],
    "bracket-pair-colorizer-2.colors": ["#FF9900", "FireBrick", "Tomato", "DodgerBlue", "DeepPink", "Orchid"],
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.color": "#4169E1",
    "material-icon-theme.activeIconPack": "react_redux",
    "security.workspace.trust.untrustedFiles": "open",
    // "emmet.triggerExpansionOnTab": true,
    "files.associations": {
        "*.html": "jinja-html",
        "**/templates/**/*.html": "django-html",
        // "**/templates/**/*": "django-txt",
        ".json": "jsonc"
    },
    "emmet.includeLanguages": {
        "jinja-html": "html",
        "django-html": "html"

    },

    "prettier.tabWidth": 4,
    "redhat.telemetry.enabled": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.inheritEnv": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "breadcrumbs.enabled": true,
    "git.openRepositoryInParentFolders": "never",
    "chatgpt.gpt3.apiKey": "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",
    "markdown.extension.toc.omittedFromToc": {},
    "markdown-preview-enhanced.previewTheme": "night.css",
    "markdown-preview-enhanced.revealjsTheme": "simple.css",

}